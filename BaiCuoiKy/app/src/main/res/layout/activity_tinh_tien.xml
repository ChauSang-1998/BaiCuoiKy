<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".TinhTien">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        android:gravity="center"
        android:padding="5dp"
        android:text="TÍNH TIỀN"
        android:textColor="#fff"
        android:textSize="38sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng: "
            android:textColor="#333"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spPHG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: "
            android:textColor="#333"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/spNgayHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnTinhTien"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/quy2"
            android:onClick="TinhTien"
            android:text="Xem hoá đơn"
            android:textColor="#fff" />

        <Button
            android:id="@+id/btnDaThanhToan"
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/quy2"
            android:onClick="DaThanhToan"
            android:text="Đã thanh toán"
            android:textColor="#fff" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvTienTro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />


</LinearLayout>