<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1565C0"
        android:gravity="center"
        android:padding="5dp"
        android:text="NHÀ TRỌ TÂN SANG"
        android:textColor="#fff"
        android:textSize="38sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abc"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnQLKhachTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="Quản  lí khách trọ"
            android:onClick="QLKhachTro"
            android:textColor="#fff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnQKPhongTro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:text="Quản lí phòng"
            android:onClick="QLPhongTro"
            android:textColor="#fff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnCapNhayHoaDon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:onClick="CapNhatHoaDon"
            android:text="Cập nhật hoá đơn"
            android:textColor="#fff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnTinhTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:onClick="TinhTien"
            android:text="Tính tiền"
            android:textColor="#fff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnQLDoanhThu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorAccent"
            android:onClick="QLDoanhThu"
            android:text="Quản lí doanh thu"
            android:textColor="#fff"
            android:textSize="22sp" />

        <Button
            android:id="@+id/btnThoat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@color/colorPrimary"
            android:text="Thoát"
            android:textColor="#fff"
            android:onClick="Thoat"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>